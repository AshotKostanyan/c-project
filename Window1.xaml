<Window x:Class="SignIn.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SignIn"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MainWindow" Height="650" Width="800">
    <Grid Background="#cfc2ff">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="96*"/>
        </Grid.ColumnDefinitions>
        <Border MinWidth="400" Background="White" Margin="22,0,22,0" Padding="30" MaxWidth="550" VerticalAlignment="Center" CornerRadius="15" Height="116" RenderTransformOrigin="0.5,0.604" Grid.ColumnSpan="3">
            <Border.Effect>
                <DropShadowEffect  BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="User Page" FontSize="30" Margin="0 0 0 20" FontWeight="Bold" HorizontalAlignment="Center" FontFamily="Times New Roman"/>


            </StackPanel>
        </Border>

    </Grid>
</Window>